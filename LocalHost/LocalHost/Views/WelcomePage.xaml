<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="LocalHost.Views.WelcomePage"
    Title="LocalHost">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Padding="0, 100, 0, 0">
            <Label Text="Welcome to LocalHost!" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="0, 10, 0 ,0 ">
                <Button Text="Log In" Clicked="goToLogIn" BorderWidth="1" WidthRequest="150"/>
                <Button Text="Sign Up" Clicked="goToSignUp" BorderWidth="1" WidthRequest="150"/>
            </StackLayout>
       </StackLayout>
    </ContentPage.Content>
</ContentPage>
